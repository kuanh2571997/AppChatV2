<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chat.DetailChatFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_detail_chat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/edit_text_input_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05" />

    <ImageButton
        android:id="@+id/image_button_call_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/none_back_ground"
        android:src="@drawable/ic_camera_alt_black_24dp"
        app:layout_constraintBottom_toBottomOf="@id/edit_text_input_message"
        app:layout_constraintLeft_toRightOf="@id/image_button_call_library"
        app:layout_constraintTop_toTopOf="@id/edit_text_input_message" />

    <ImageButton
        android:id="@+id/image_button_call_library"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/none_back_ground"
        android:src="@drawable/ic_insert_photo_black_24dp"
        app:layout_constraintBottom_toBottomOf="@id/edit_text_input_message"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/edit_text_input_message" />

    <EditText
        android:id="@+id/edit_text_input_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_input_message"
        android:hint="Aa"
        android:paddingLeft="20sp"
        android:paddingTop="5sp"
        android:paddingBottom="5sp"
        android:textSize="25sp"
        android:layout_marginLeft="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/image_button_call_camera"
        app:layout_constraintRight_toLeftOf="@id/image_button_send" />

    <ImageButton
        android:id="@+id/image_button_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/none_back_ground"
        android:src="@drawable/ic_send_black_24dp"
        app:layout_constraintBottom_toBottomOf="@id/edit_text_input_message"
        app:layout_constraintLeft_toRightOf="@id/edit_text_input_message"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/edit_text_input_message" />

</androidx.constraintlayout.widget.ConstraintLayout>